@page "/skills"
@using MudBlazor
<PageTitle>Skills</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-6">
    <MudText Typo="Typo.h4" Class="mb-4">Skills</MudText>
    @foreach (var category in CategorizedSkills)
    {
        <MudText Typo="Typo.h6" Class="category-heading">@category.Key</MudText>
        <MudGrid GutterSize="3">
            @foreach (var skill in category.Value)
            {
                <MudItem xs="12" sm="6" md="4" lg="3">
                    <MudPaper Elevation="3" Class="skill-card d-flex flex-column align-items-center pa-6" Style="background: transparent;">
                        <MudAvatar Size="Size.Large" Class=@($"mb-2 logo {skill.CssClass}") Style="background: transparent; width: 80px; height: 80px;">
                            <img src="@skill.Logo" alt="@skill.Name logo" style="width: 64px; height: 64px;" />
                        </MudAvatar>
                        <MudText Typo="Typo.subtitle1">@skill.Name</MudText>
                    </MudPaper>
                </MudItem>
            }
        </MudGrid>
    }
</MudContainer>

